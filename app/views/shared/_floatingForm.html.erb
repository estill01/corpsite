<%= stylesheet_link_tag "floatingForm" %>
<div id="floatingInquiry" class="form hide">
	<%= form_for(@inquiry) do |f| %>
	<div class="textarea" id="howHelp">
		<%= f.label :content, "What can we do for you?" %><br/>
		<%= f.text_area :content, :cols => 10, :rows => 3 , :id => "floatForm" %>
	</div>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	<div class="submit">
		<%= f.submit 'Send' %>
	</div>
	<% end %>
</div>
