<div id="inquiry">	
	<%= form_for(@inquiry) do |f| %>
	<div class="textarea" id="howHelp">
		<%= f.label :content, "Tell us about your situation" %><br/>
		<%= f.text_area :content, :cols => 10, :rows => 3  %>
	</div>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	<div class="submit">
		<%= f.submit 'Send' %>
	</div>
	<% end %>
</div>